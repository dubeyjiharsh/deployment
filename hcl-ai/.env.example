# API Keys
ANTHROPIC_API_KEY=your-key-here
OPENAI_API_KEY=your-openai-api-key-here
TAVILY_API_KEY=your-tavily-api-key-here
# Get your Tavily API key at: https://tavily.com/

# Database
#DATABASE_PATH=./data/canvas.db

# ----------------------------------------------
# PostgreSQL Database (used by db container)
# ----------------------------------------------
POSTGRES_USER=hclai
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_DB=hclai



# Authentication
AUTH_SECRET=your-nextauth-secret-here
# Generate with: openssl rand -base64 32

# Encryption (for API keys in database)
ENCRYPTION_KEY=your-encryption-key-here
# Generate with: openssl rand -hex 32

# Encryption Key Rotation (optional)
# When rotating keys, set the old key here temporarily to allow decryption
# After all values are re-encrypted with the new key, remove this variable
# ENCRYPTION_KEY_PREVIOUS=your-previous-encryption-key-here

# Rate Limiting
# Set to 'true' only when behind a trusted reverse proxy (e.g., Nginx, Cloudflare)
# This allows the app to trust the X-Forwarded-For header for rate limiting
TRUST_PROXY=false

# CORS Configuration
# Comma-separated list of allowed origins for API requests
# For production, set this to your frontend domain(s)
ALLOWED_ORIGINS=http://localhost:3000

# Real-time Collaboration (Optional)
# URL of your Hocuspocus server for presence/cursors
# If not set, collaboration features are disabled (app works normally)
NEXT_PUBLIC_HOCUSPOCUS_URL=ws://localhost:3001

